<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:background="@drawable/blood5">


    <CheckBox
        android:text="A+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A_positive"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="O+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/O_positive"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="B+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B_positive"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="AB+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AB_positive"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="A-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A_negative"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="O-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/O_negative"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="B-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B_negative"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <CheckBox
        android:text="AB-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AB_negative"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:id="@+id/proceed"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
